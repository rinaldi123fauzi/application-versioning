<div class="panel panel-default">
  <div class="panel-heading">Form aplikasi</div>
  <div class="panel-body">
<%= form_for(@aplikasi, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @aplikasi.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@aplikasi.errors.count, "error") %> prohibited this aplikasi from being saved:</h4>

      <ul>
      <% @aplikasi.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
  <label for="" class="col-sm-2 control-label">Id Aplikasi</label>
    <div class="col-sm-10">
      <%= f.text_field :id_aplikasi, class: "form-control", required: "true" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :kode, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :kode, class: "form-control", required: "true" %>
    </div>
  </div>
  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Nama Aplikasi</label>
    <div class="col-sm-10">
      <%= f.text_field :nama_aplikasi, class: "form-control", required: "true" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :deskripsi, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :deskripsi, class: "form-control", required: "true" %>
    </div>
  </div>
  <div class="form-group">
     <label for="" class="col-sm-2 control-label">Pemilik Proses</label>
    <div class="col-sm-10">
      <%= f.text_field :pemilik_proses, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
     <label for="" class="col-sm-2 control-label">Divisi</label>
    <div class="col-sm-10">
      <%= f.text_field :divisi, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
     <label for="" class="col-sm-2 control-label">Default Version</label>
    <div class="col-sm-10">
      <%= f.text_field :default_version, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
     <label for="" class="col-sm-2 control-label">Status</label>
    <div class="col-sm-10">
      <%= f.select :status, ['Aktif','Tidak Aktif'], {prompt: "Pilih Status"}, {:class => 'form-control', required: "true"} %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
  </div>
</div>