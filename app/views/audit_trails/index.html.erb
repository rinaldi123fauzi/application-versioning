<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Form audit_trail</h2>
    <ol class="breadcrumb">
      <li>
        <a href="">Home</a>
      </li>
      <li>
        <a href="<%= audit_trails_url %>">List</a>
      </li>
      <li class="active">
        <strong>Form</strong>
      </li>
    </ol>
  </div>
</div>
<br>
<div id="content">
  <div class="page-header">
    <!--
    <%= link_to new_audit_trail_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Audit trail
    <% end %>-->
    <!--    <h1>Listing </h1>-->
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example">
      <thead>
      <tr>
        <th>No</th>
                  <th>User</th>
                  <th>Description</th>
                  <th>Controller</th>
                  <th>Action</th>
                  <th>Browser</th>
                  <th>Ip address</th>
                  <th>Waktu</th>
                <th></th>
      </tr>
      </thead>

      <tbody>
      <% @audit_trails.each_with_index do |audit_trail, index| %>
      <tr>
        <td><%= index+1 %></td>
                  <td><%= audit_trail.user %></td>
                  <td><%= audit_trail.description %></td>
                  <td><%= audit_trail.controller %></td>
                  <td><%= audit_trail.action %></td>
                  <td><%= audit_trail.browser %></td>
                  <td><%= audit_trail.ip_address %></td>
                  <td><%= audit_trail.try(:created_at) %></td>
                <td><%= link_to 'Show', audit_trail %></td>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
  $(function() {
      $('.dataTables-example').dataTable({
          "dom": 'T<"clear">lfrtip',
          "bInfo" : false,
          "tableTools": {
              "sSwfPath": "../assets/dataTables/swf/copy_csv_xls_pdf.swf"
