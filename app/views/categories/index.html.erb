<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Form category</h2>
    <ol class="breadcrumb">
      <li>
        <a href="">Home</a>
      </li>
      <li>
        <a href="<%= categories_url %>">List</a>
      </li>
      <li class="active">
        <strong>Form</strong>
      </li>
    </ol>
  </div>
</div>
<br>
<div id="content">
  <div class="page-header">
    <%= link_to new_category_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Category
    <% end %>
    <!--    <h1>Listing </h1>-->
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example">
      <thead>
      <tr>
        <th>No</th>
                  <th>Nama</th>
                  <th>Deskripsi</th>
                <th></th>
      </tr>
      </thead>

      <tbody>
      <% @categories.each_with_index do |category, index| %>
      <tr>
        <td><%= index+1 %></td>
                  <td><%= category.nama %></td>
                  <td><%= category.deskripsi %></td>
                <td>
                    <%= link_to '', category_path(category.id), class: "fa fa-eye btn btn-xs btn-info" %>
                    <%= link_to '', edit_category_path(category), class: " fa fa-pencil btn btn-xs btn-warning" %>
                </td>
        <%# <td><%= link_to '', category, method: :delete, class: "fa fa-trash btn btn-xs btn-danger", data: { confirm: 'Are you sure?' } %>
      </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<% content_for :javascript do %>

  <script type="text/javascript">
    $(function() {

        $('.dataTables-example').dataTable({
            "dom": 'T<"clear">lfrtip',
            "tableTools": {
                "sSwfPath": "../assets/dataTables/swf/copy_csv_xls_pdf.swf"
            }
        });
    });
  </script>

<% end %>
