<div class="panel panel-default">
  <div class="panel-heading">Form Release</div>
  <div class="panel-body">
<%= form_for(@change, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @change.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@change.errors.count, "error") %> prohibited this change from being saved:</h4>

      <ul>
      <% @change.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :id_rfc, value: params[:id] %>
  <div class="form-group">
    <%= f.label :versi_sourcecode, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <% if @change.new_record? %>
        <%= f.text_field :versi_sourcecode, value: @version_sourcecode, class: "form-control", readonly: true %>
      <% else %>
        <%= f.text_field :versi_sourcecode, value: @change.versi_sourcecode, class: "form-control", readonly: true %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tgl_release, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :tgl_release, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
  </div>
</div>