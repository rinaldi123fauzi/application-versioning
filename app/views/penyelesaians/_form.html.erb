<div class="panel panel-default">
  <div class="panel-heading">Form penyelesaian</div>
  <div class="panel-body">
<%= form_for(@penyelesaian, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @penyelesaian.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@penyelesaian.errors.count, "error") %> prohibited this penyelesaian from being saved:</h4>

      <ul>
      <% @penyelesaian.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :id_rfc, value: params[:id] %>
  <div class="form-group">
    <%= f.label :kode_penyelesaian, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <% if @penyelesaian.new_record? %>
        <%= f.text_field :kode_penyelesaian, value: @no_penyelesaian, class: "form-control", readonly: true %>
      <% else %>
        <%= f.text_field :kode_penyelesaian, value: @penyelesaian.kode_penyelesaian, class: "form-control", readonly: true %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :tgl_selesai, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :tgl_selesai, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :durasi, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :durasi, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pic, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :pic, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Pending QC", class: "btn btn-primary" %>
      <input type="submit" value="> Next to QC" class="btn btn-primary" name="next_line">
    </div>
  </div>
<% end %>
  </div>
</div>